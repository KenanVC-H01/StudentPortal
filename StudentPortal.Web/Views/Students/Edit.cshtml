@model   StudentPortal.Web.Models.Entities.Student

<h2>Edit Student</h2>

<form method="post">
    @* Id *@
    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly/>
    </div>

    @* Name *@
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    @* Email *@
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>

    @* Phone *@
    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" />
    </div>

    @* Checkbox *@
    <div class="mt-3">
        <input type="checkbox" class="form-check-control" id="subscribed" asp-for="Subscribed" />
        <label class="form-label" for="subscribed">Subscribed</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Students">Delete</button>
    </div>

</form>